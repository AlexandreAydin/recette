{% extends 'base.html.twig' %}

{% block title %}Site - Recette Ingrédient{% endblock %}

{% block body %}
    <div class="container mt-4">
     {% if not recipes.items is same as ([]) %}

        <h1> Mes Recette</h1>

        <a href="{{ path('app_recipe.new') }}" class="btn btn-primary mt-4 mb-4">Ajouter une recette</a>

        	{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

        <div class="count">
            Il y a {{ recipes.getTotalItemCount }} recettes au total
        </div>
        

        <table class="table table-hover mt-4">
            <thead>
                <tr>
                <th scope="col">Numéro</th>
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Difficulté</th>
                <th scope="col">Date de creation</th>
                <th scope="col">Edition</th>
                <th scope="col">Suppression</th>
                </tr>
            </thead>
            <tbody>
            {# permet d'afficher tous les recettes en boucles dans 1 tableau#}
            {% for recipe in recipes %}
                <tr class="table-primary">
                <th scope="row">{{recipe.id}}</th>
                <td>{{recipe.name}}</td>
                <td>
					{% if recipe.price is null %}
						Non renseigné
					{% else %}
					{{ recipe.price|number_format(2, '.', ',') }}
									€
					{% endif %}
			        </td>
			        <td>    
					    {% if recipe.difficulty is null %}
						    Non renseigné
					    {% else %}
						    {{ recipe.difficulty }}
					    {% endif %}
				    </td>

                <td>{{ recipe.createdAt|date('d/m/Y') }}</td>
                <td>
                    <a href="{{path ('app_recette.edit',{id:recipe.id}) }}" class="btn btn-info">Modifier</a>
                </td>
                
                <td>
                    <a href="{{path ('app_recipe.delete',{id:recipe.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
                </tr>

                {% endfor %}
            </tbody>
        </table>
        {# permet d'affiché la pagination #}
        <div class="navigation d-flex justify-content-center mt-4">
            {{ knp_pagination_render(recipes) }}
        </div>
        {% else %}
        Il n'y a pas de ingrédients
        {% endif %}
    </div>



{% endblock %}
